üìä Step 2 ‚Äî Implement renderTimeHorizonChart()
Replace your placeholder with this full implementation in main.js:

javascript
function renderTimeHorizonChart(digest) {
    const articles = digest.articles;

    // Count time horizons
    const horizonCounts = {
        "near-term": 0,
        "mid-term": 0,
        "long-term": 0
    };

    for (const art of articles) {
        const h = art.time_horizon;
        if (horizonCounts[h] !== undefined) {
            horizonCounts[h]++;
        }
    }

    const labels = Object.keys(horizonCounts);
    const values = Object.values(horizonCounts);

    // Clear previous chart
    document.getElementById("time-horizon-chart").innerHTML =
        '<canvas id="timeHorizonCanvas"></canvas>';

    const ctx = document.getElementById("timeHorizonCanvas").getContext("2d");

    new Chart(ctx, {
        type: "doughnut",
        data: {
            labels: labels,
            datasets: [{
                data: values,
                backgroundColor: [
                    "rgba(75, 192, 192, 0.7)",   // near-term
                    "rgba(255, 205, 86, 0.7)",   // mid-term
                    "rgba(255, 99, 132, 0.7)"    // long-term
                ],
                borderColor: [
                    "rgba(75, 192, 192, 1)",
                    "rgba(255, 205, 86, 1)",
                    "rgba(255, 99, 132, 1)"
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: "bottom" },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            const label = context.label;
                            const value = context.raw;
                            return `${label}: ${value} signals`;
                        }
                    }
                }
            }
        }
    });
}
